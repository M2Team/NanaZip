---
import Layout from "../layouts/Layout.astro";
import PageSection from "../components/PageSection/PageSection.astro";
import StoreBadge from "../components/StoreBadge/StoreBadge.astro";
import { Image } from "astro:assets";

import heroImage from "../assets/images/MainWindowDarkMode.png";
---

<Layout description="NanaZip home page">
	<main id="main">
		<PageSection header="NanaZip">
			<Fragment slot="description">
				<p>The 7-Zip derivative intended for the modern Windows experience</p>
				<StoreBadge
					productId="9n8g7tscl18r"
					windowMode="full"
					size="small"
				/>
				<span>Or check out <a href="/downloads">alternative download options</a></span>
			</Fragment>
			<Image src={heroImage} alt="" loading="eager" />
		</PageSection>
	</main>
</Layout>
