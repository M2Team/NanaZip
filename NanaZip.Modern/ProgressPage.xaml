<Page
  x:Class="NanaZip.Modern.ProgressPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="using:NanaZip.Modern"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <StackPanel
      Grid.Row="0"
      Grid.ColumnSpan="2"
      Padding="16,16,16,16"
      Orientation="Vertical">
      <TextBlock
        d:Text="[Adding]"
        FontSize="24"
        Style="{ThemeResource BaseTextBlockStyle}"
        Text="{x:Bind ActionText, Mode=OneWay}" />
      <TextBlock
        Margin="0,4,0,0"
        d:Text="debian-12.0.0-amd64-netinst.iso"
        Text="{x:Bind FileNameText, Mode=OneWay}" />
      <ProgressBar
        Margin="0,4,0,0"
        d:Maximum="100"
        d:Minimum="0"
        d:Value="30"
        Maximum="{x:Bind ProgressBarMaximum, Mode=OneWay}"
        Minimum="{x:Bind ProgressBarMinimum, Mode=OneWay}"
        Value="{x:Bind ProgressBarValue, Mode=OneWay}" />

      <Grid Margin="0,24,0,0" ColumnSpacing="32">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <StackPanel Grid.Column="0">
            <TextBlock Margin="0,4,0,0" Style="{ThemeResource BaseTextBlockStyle}">
              [Elapsed time]
            </TextBlock>
            <TextBlock Margin="0,4,0,0" Style="{ThemeResource BaseTextBlockStyle}">
              [Remaining time]
            </TextBlock>
            <TextBlock Margin="0,4,0,0" Style="{ThemeResource BaseTextBlockStyle}">
              [Files]
            </TextBlock>
          </StackPanel>

          <StackPanel Grid.Column="1" HorizontalAlignment="Right">
            <TextBlock
              Margin="0,4,0,0"
              d:Text="00:00:08"
              HorizontalTextAlignment="Right"
              Text="{x:Bind ElapsedTimeText, Mode=OneWay}" />
            <TextBlock
              Margin="0,4,0,0"
              d:Text="00:01:49"
              HorizontalTextAlignment="Right"
              Text="{x:Bind RemainingTimeText, Mode=OneWay}" />
            <TextBlock
              Margin="0,4,0,0"
              d:Text="1/6"
              HorizontalTextAlignment="Right"
              Text="{x:Bind FilesText, Mode=OneWay}" />
          </StackPanel>
        </Grid>

        <Grid Grid.Column="1">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <StackPanel Grid.Column="0">
            <TextBlock Margin="0,4,0,0" Style="{ThemeResource BaseTextBlockStyle}">
              [Speed]
            </TextBlock>
            <TextBlock Margin="0,4,0,0" Style="{ThemeResource BaseTextBlockStyle}">
              [Total size]
            </TextBlock>
            <TextBlock Margin="0,4,0,0" Style="{ThemeResource BaseTextBlockStyle}">
              [Processed]
            </TextBlock>
            <TextBlock
              Margin="0,4,0,0"
              Style="{ThemeResource BaseTextBlockStyle}"
              Visibility="{x:Bind ShowPackedValue, Mode=OneWay}">
              [Packed Size]
            </TextBlock>
            <TextBlock
              Margin="0,4,0,0"
              Style="{ThemeResource BaseTextBlockStyle}"
              Visibility="{x:Bind ShowCompressionRatioValue, Mode=OneWay}">
              [Compression ratio]
            </TextBlock>
          </StackPanel>

          <StackPanel Grid.Column="1" HorizontalAlignment="Right">
            <TextBlock
              Margin="0,4,0,0"
              d:Text="30 MB/s"
              HorizontalTextAlignment="Right"
              Text="{x:Bind SpeedText, Mode=OneWay}" />
            <TextBlock
              Margin="0,4,0,0"
              d:Text="1886 MB"
              HorizontalTextAlignment="Right"
              Text="{x:Bind TotalSizeText, Mode=OneWay}" />
            <TextBlock
              Margin="0,4,0,0"
              d:Text="204 MB"
              HorizontalTextAlignment="Right"
              Text="{x:Bind ProcessedText, Mode=OneWay}" />
            <TextBlock
              Margin="0,4,0,0"
              d:Text="182 MB"
              HorizontalTextAlignment="Right"
              Text="{x:Bind PackedSizeText, Mode=OneWay}" />
            <TextBlock
              Margin="0,4,0,0"
              d:Text="89%"
              HorizontalTextAlignment="Right"
              Text="{x:Bind CompressionRatioText, Mode=OneWay}" />
          </StackPanel>
        </Grid>
      </Grid>
    </StackPanel>
    <Grid
      Grid.Row="1"
      Background="#37C9C9C9"
      BorderBrush="{ThemeResource CardStrokeColorDefault}"
      BorderThickness="0,1,0,0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>
      <HyperlinkButton Grid.Column="0" Margin="4,0,0,0">[More information]</HyperlinkButton>
      <StackPanel
        Grid.Column="1"
        Padding="0,0,12,0"
        Orientation="Horizontal">
        <Button
          Width="120"
          Margin="4,16,4,16"
          Click="BackgroundButtonClickedHandler"
          Visibility="{x:Bind ShowBackgroundButton, Mode=OneWay}">
          [Background]
        </Button>
        <Button
          Width="120"
          Margin="4,16,4,16"
          Click="PauseButtonClickedHandler"
          Visibility="{x:Bind ShowPauseButton, Mode=OneWay}">
          [Pause]
        </Button>
        <Button
          Width="120"
          Margin="4,16,4,16"
          Click="CancelButtonClickedHandler">
          [Cancel]
        </Button>
      </StackPanel>
    </Grid>
  </Grid>
</Page>
