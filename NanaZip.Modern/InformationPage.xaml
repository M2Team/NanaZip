<Page
  x:Class="NanaZip.Modern.InformationPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="using:NanaZip.Modern"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <TextBlock
      Margin="16,0"
      d:Text="[Information]"
      FontSize="24"
      Style="{ThemeResource BaseTextBlockStyle}"
      Text="{x:Bind Title, Mode=OneWay}" />
    <TextBox
      Grid.Row="1"
      Margin="16,8,16,16"
      AcceptsReturn="True"
      IsReadOnly="True"
      Text="{x:Bind Text, Mode=OneWay}">
      <TextBox.SelectionFlyout>
        <TextCommandBarFlyout Placement="BottomEdgeAlignedLeft" />
      </TextBox.SelectionFlyout>
    </TextBox>
    <Grid
      Grid.Row="2"
      Background="#37C9C9C9"
      BorderBrush="{ThemeResource CardStrokeColorDefault}"
      BorderThickness="0,1,0,0">
      <StackPanel
        Grid.Column="1"
        Padding="0,0,12,0"
        HorizontalAlignment="Right"
        Orientation="Horizontal">
        <Button
          x:Uid="/NanaZip.Modern/InformationPage/CloseButton"
          Width="120"
          Margin="4,16,4,16"
          d:Content="[Close]"
          Click="CloseButtonClickedHandler" />
      </StackPanel>
    </Grid>
  </Grid>
</Page>
